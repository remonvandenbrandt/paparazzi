<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">
<flight_plan alt="1" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="15" name="Waypoint move" security_height="1">
<header>
 #include "autopilot.h"
 #include "generated/modules.h"

#include "modules/object_detection_opencv/object_detection.h"
//Enable advanced electrical power functions
    #include "subsystems/electrical.h"

// Incluse airframe.h To be able to use specific variables
    #include "generated/airframe.h"
</header>
 <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-1.0" y="-4.0"/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
    <waypoint lat="51.990639" lon="4.376807" name="p1"/>
    <waypoint lat="51.990624" lon="4.376767" name="p2"/>
    <waypoint lat="51.990648" lon="4.376745" name="p3"/>
    <waypoint lat="51.990663" lon="4.376784" name="p4"/>
    <waypoint lat="51.990635" lon="4.376836" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" name="FA4"/>
    <waypoint name="MYDYNAMIC" x="-1.0" y="-1.0"/>
	<waypoint name="here" x="0" y="0"/>
    <waypoint name="MYTARGET" x="0" y="3.5"/>
    <waypoint lat="51.990645" lon="4.376776" name="center"/>
    <waypoint lat="51.9906344" lon="4.3767525" name="CVTEST"/>
  </waypoints>
<!--<exceptions>
	<exception cond="LessThan(15, NavTime())" deroute="land"/>-->
	<!--  <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Setting_home_location')) && !(nav_block == IndexOfBlock('Holding_point') && !(nav_block == IndexOfBlock('Land')))" deroute="Land"/>-->
<!--</exceptions>-->
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA1"/>
      <corner name="FA2"/>
      <corner name="FA3"/>
      <corner name="FA4"/>
    </sector>
    <!--sector color="orange" name="Bound_Box">
      <corner name="FA1_margin"/>
      <corner name="FA2_margin"/>
      <corner name="FA3_margin"/>
      <corner name="FA4_margin"/>
    </sector-->
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetWaypointHere(WP_HOME)"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay vmode="climb" climb="0.5" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
<block name="startobject">
	<call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
	<call fun="NavSetWaypointHere(WP_here)"/>
	<go from="here" wp="p1" hmode="route"/>
	<deroute block="cvtest"/>
    </block>
 <block name="cvtest">
	<exception cond="! InsideFlight_Area(GetPosX(), GetPosY())" deroute="gotoCENTER"/>
	<exception cond="getObstacle()->w > 250" deroute="Avoidnow"/>
<!--	<call fun="generateRandomWaypoint(WP_MYDYNAMIC)"/>-->
	<!--<call fun="NavSetWaypointHere(WP_here)"/>
	<call fun="nav_set_heading_towards_waypoint(WP_MYDYNAMIC)"/>
	<go from="here" wp="MYDYNAMIC" hmode="route"/>

	<deroute block="cvtest"/>
	<stay wp="p1"/>-->
	<call fun="nav_set_heading_towards_waypoint(WP_MYDYNAMIC)"/>
	<go wp="MYDYNAMIC"/>
	<call fun="NavSetWaypointHere(WP_here)"/>
	<stay wp="here"/>
    </block>
<block name="Avoidnow">
	<call fun="generateRandomWaypoint(WP_MYDYNAMIC)"/>
	<!--call fun="nav_set_heading_towards_waypoint(WP_MYDYNAMIC)"/-->
        <!--call fun="NavSetWaypointHere(WP_here)"/>
	<call fun="nav_set_heading_towards_waypoint(WP_MYDYNAMIC)"/>
	<go from="here" wp="MYDYNAMIC" hmode="route"/> 
	<deroute block="cvtest"/> -->
	<stay wp="here"/>
</block>
	<block name="gotoCENTER">
          <call fun="nav_set_heading_towards_waypoint(WP_center)"/>
	  <go wp="center"/>	
	  <stay wp="center"/>
    </block>
<block name="stayStandby">
	<stay wp="MYTARGET"/>
</block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Standby"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
